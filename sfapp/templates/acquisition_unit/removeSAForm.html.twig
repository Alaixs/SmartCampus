<!DOCTYPE html>
<html lang="fr" xmlns="http://www.w3.org/1999/html">
<head>
    <title>SmartCampus</title>
    <link rel="stylesheet" href="{{ asset('assets/css/formStyle.css') }}">
</head>
<body>
{% include 'partial/header.html.twig'%}

<section>
    <div class="form">
        <div class="title">
            <a href="/admin">
                <img src="{{ asset('assets/img/back_arrow.svg') }}" alt="Retour">
            </a>
            <p>Supprimer un syst√®me d'acquisition</p>
        </div>
        <div class="formInputs">
            {{ form_start(removeSAForm) }}
            <div class="sectionsOfWindow">
                <div class="formAndFooter">
                    <div class="formRest">
                        {{ form_rest(removeSAForm) }}
                    </div>
                        {% for flashMessage in app.flashes('message') %}
                            <div class="flash-message">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                        {% for flashMessage in app.flashes('error') %}
                            <div class="flash-error">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                    <div class="formFooter">
                        <p>* Obligatoire</p>
                        <div class="buttons">
                            <a href="/admin" type="submit" class="endButton">Retour</a>
                            <button type="submit" class="endButton delete">Supprimer</button>
                        </div>
                    </div>
                </div>

            {{ form_end(removeSAForm) }}
        </div>
    </div>
</section>

{% include 'partial/footer.html.twig'%}

</body>
</html>
