<!DOCTYPE html>
<html lang="fr">
<head>
    <title>SmartCampus</title>
    <link rel="stylesheet" href="{{ asset('assets/css/manageSA.css') }}">
    <link rel="icon" href="{{ asset('assets/img/favicon.ico') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body>
{% include 'partial/header.html.twig'%}


<section>
    <div class="dataTest">
        <div class="title">
            <a href="{{ path('app_admin') }}">
                <img src="{{ asset('assets/img/back_arrow.svg') }}" alt="Retour">
            </a>
            Panneau de gestion du {{ room.acquisitionUnit }}
        </div>
        <div class="signAU">
            <div class="signAUInformations">
                    <p>Etat du système d'acquisition : {{ room.acquisitionUnit.state }}</p>
                    <div>
                        <ul class="data">
                            <li class="lastData">
                                <div class="lastDataDate">
                                    Dernière mesure
                                </div>
                                {% if temp[1] != 0 %}
                                    <div class="lastDataValue">
                                        {{ temp[1] }}
                                    </div>
                                {% elseif humidity[1] != 0 %}
                                    <div class="lastDataValue">
                                        {{ humidity[1] }}
                                    </div>
                                {% elseif co2[1] != 0 %}
                                    <div class="lastDataValue">
                                        {{ co2[1] }}
                                    </div>
                                {% else %}
                                    <div class="lastDataError">Erreur</div>
                                {% endif %}
                            </li>
                            <li class="tempValue">
                                {% if (temp[0] > 0) %}
                                    <div class="typeValue">Température</div>
                                    <div class="value">{{ temp[0] }}°C</div>
                                {% else %}
                                    <div class="value">Une erreur est survenue.</div>
                                {% endif %}
                            </li>
                            <li class="tempValue">
                                {% if (temp[0] > 0) %}
                                    <div class="typeValue">Humidité</div>
                                    <div class="value">{{ humidity[0] }}%</div>
                                {% else %}
                                    <div class="value">Une erreur est survenue.</div>
                                {% endif %}
                            </li>
                            <li class="tempValue">
                                {% if (temp[0] > 0) %}
                                    <div class="typeValue">CO2</div>
                                    <div class="value">{{ co2[0] }} PPM</div>
                                {% else %}
                                    <div class="value">Une erreur est survenue.</div>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="buttons">
                <button type="button" class="endButton delete" data-bs-toggle="modal" data-bs-target="#manageAcquisitionUnitModal">
                    Désaffecter le SA
                </button>

                <!-- Modal -->
                <div class="modal fade" id="manageAcquisitionUnitModal" tabindex="-1" aria-labelledby="manageAcquisitionUnitModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-2" id="manageAcquisitionUnitModalLabel">Êtes-vous sûr ?</h1>
                            </div>
                            <div class="modal-body">
                                Vous êtes sur le point de désaffecter l'{{ room.acquisitionUnit.name }} de la salle {{ room.name }}.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="endButton cancelButtonModal" data-bs-dismiss="modal">Annuler</button>
                                <a class="endButton deleteButton test" href="{{ path('unassignAU', {'room' : room.id}) }}">Confirmer</a>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="endButton" href="{{ path('assignAU', {'room' : room.id}) }}">Gérer l'affectation du SA</a>
                {% if room.acquisitionUnit.state == "En attente d'installation" %}
                    <a class="endButton submit" href="{{ path("defAcquisitionUnitSupport", {'acquisitionUnit' : room.acquisitionUnit.id}) }}">Prendre en charge le SA</a>
                {% elseif room.acquisitionUnit.state == 'Pris en charge' %}
                    <a class="endButton submit"  href="{{ path('defAcquisitionUnitOperational', {'acquisitionUnit' : room.acquisitionUnit.id}) }}">Rendre le SA opérationnel</a>
                {% elseif room.acquisitionUnit.state == 'En panne' or room.acquisitionUnit.state == 'Dysfonctionnement' %}
                    <a class="endButton submit"  href="{{ path('defAcquisitionUnitOperational', {'acquisitionUnit' : room.acquisitionUnit.id}) }}">Réparer le SA</a>
                {% endif %}
            </div>
        </div>

    </div>

    <div class="roomInfo">
        <div class="form">
            <div class="title">
                <p>Informations de la salle {{ room.name }}</p>
            </div>
            <div class="listInfoRoom">
                <ol>
                    <li>
                        Étage : {{
                        room.floor == 0 ? 'Rez-de-chaussée'
                        : room.floor == 1 ? '1er'
                        : room.floor ~ 'ème'
                        }}
                    </li>
                    <li>Capacité : {{ room.capacity }} personnes</li>
                    {% if (room.hasComputers) %}
                        <li>Ordinateur : oui</li>
                    {% else %}
                        <li>Ordinateur : non</li>
                    {% endif %}
                    <li>Surface : {{ room.area }} mètres carrés</li>
                    <li>Exposition : {{ room.exposure }}</li>
                    <li>Nombre de fenêtres : {{ room.nbWindows }}</li>
                </ol>
            </div>
        </div>
    </div>

</section>

{% include 'partial/footer.html.twig'%}
