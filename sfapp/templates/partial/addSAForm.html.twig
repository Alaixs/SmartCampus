<!DOCTYPE html>
<html lang="fr" xmlns="http://www.w3.org/1999/html">
    <head>
        <title>SmartCampus</title>
        <link rel="stylesheet" href="{{ asset('assets/css/popUpAddSAForm.css') }}">
    </head>
    <body>
    {% include 'partial/header.html.twig'%}


    <div class="popUpAddSA">
        <div class="addSA">
            <div class="title">
                <p>Ajouter un système d'acquisition</p>
                <p>Systèmes acquisition déjà enregistrés</p>
            </div>
            <div class="formSA">
                {{ form_start(addSAForm) }}
                <div class="bodyFormSA">
                    <div id="add_sa_form">
                        {{ form_rest(addSAForm) }}
                        <div class="divSubmitButton">
                            <p>* Obligatoire</p>
                            <button type="submit" class="submitButtonFormSA">Envoyer</button>

                        </div>
                    </div>

                    <section class = "line">

                    </section>

                    <div class="listeAllSA">
                        <ul>
                            {% for sa in listeSa %}
                                <li>{{ sa.number }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                {{ form_end(addSAForm) }}
            </div>
        </div>
    </div>

    {% include 'partial/footer.html.twig'%}

    </body>
</html>
