<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<!DOCTYPE html>
<html lang="fr" xmlns="http://www.w3.org/1999/html">
<head>
    <title>SmartCampus</title>
    <link rel="stylesheet" href="{{ asset('assets/css/detailRoom.css') }}">
    <link rel="icon" href="{{ asset('assets/img/favicon.ico') }}" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        function reloadPage() {
            setTimeout(function() {
                location.reload(); // Reload the current page
            }, 60000); // 1 minutes in milliseconds (300,000 ms)
        }

        // Start the reload timer when the page loads
        reloadPage();


    </script>
</head>
<body>
{% include 'partial/header.html.twig'%}


<section>
    <div class="form">
        <div class="title">
            <a class="backArrow" href="{{ path('app_admin') }}">
                <img src="{{ asset('assets/img/back_arrow.svg') }}" alt="Retour">
            </a>
            <p>Salle {{ room.name }}</p>
            {% if is_granted('ROLE_ADMIN') %}
                <p>Données</p>
            {% else %}
                <p>Système d'acquisition</p>
            {% endif %}
        </div>
        <div class="formInputs">
            <div class="sectionsOfWindow">
                <div class="formAndFooter">
                    <div class="restOfForm">
                        <p>Étage : {{
                            room.floor == 0 ? 'Rez-de-chaussée'
                            : room.floor == 1 ? '1er'
                            : room.floor ~ 'ème'
                            }}</p>
                        <p>Capacité maximum : {{ room.capacity }} personne{{ room.capacity > 1 ? 's' : ''}}</p>
                        <p>Cette salle contient des ordinateurs : {{ room.hasComputers ? 'Oui' : 'Non' }}</p>
                        <p>Superficie : {{ room.area }} m²</p>
                        <p>Exposition : {{ room.exposure }}</p>
                        <p>Cette salle contient {{ room.nbWindows }} fenêtre{{ room.nbWindows > 1 ? 's' }}</p>
                    </div>

                    <div class="formFooter">

                        <div class="buttons">
                                <a href="{{ path('editRoom', {'room' : room.id}) }}" type="submit" class="endButton">Modifier la salle</a>
                            <button type="button" class="endButton delete" data-bs-toggle="modal" data-bs-target="#removeRoomModal">
                                Supprimer
                            </button>


                            <!-- Modal -->
                            <div class="modal fade" id="removeRoomModal" tabindex="-1" aria-labelledby="removeRoomModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-2" id="removeRoomModalLabel">Êtes-vous sûr ?</h1>
                                        </div>
                                        <div class="modal-body">
                                            Vous allez supprimer la salle : {{ room.name }}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="endButton cancelButtonModal" data-bs-dismiss="modal">Annuler</button>
                                            <a style="text-decoration: none"  href="{{ path('removeRoom', {'room': room.id})}}" class="endButton delete">Confirmer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <section class = "line"></section>
                <div class="rightSection">
                    <div class="formAndFooter">

                        <div class="infoSA">
                            {% if room.acquisitionUnit %}
                                <p class="detailTitle">Numéro du SA : {{ room.acquisitionUnit }}</p>
                                <p class="detailTitle">État du SA : {{ room.acquisitionUnit.state }}</p>
                            {% elseif hasAcquisitionUnitAvailable %}
                                <p class="detailTitle">AUCUN SA AFFECTÉ</p>
                                <p class="detailTitle">Affectez un SA pour commencer la prise de données</p>
                            {% elseif not hasAcquisitionUnitInDatabase %}
                                <p class="detailTitle">AUCUN SA N'A ÉTÉ AJOUTÉ POUR LE MOMENT</p>
                                <p class="detailTitle">Commencez par ajouter un SA</p>
                            {% else %}
                                <p class="detailTitle">AUCUN SA N'EST ACTUELLEMENT DISPONIBLE</p>
                                <p class="detailTitle">Commencez par ajouter un SA</p>
                            {% endif %}
                        </div>

                        <div class="adviceForUser">
                        {% if room.acquisitionUnit == false %}
                            <p>Aucun système d'acquisition n'a été installé dans cette salle</p>
                        {% else  %}
                        {% endif %}
                            {% if (temp[0] < 0 and humidity[0] < 0 and co2[0]) %}

                                {% if (temp[1] != 0) %}

                                    <p>Un ou plusieurs capteurs ne renvoie pas les données correctement</p>

                            {% elseif room.acquisitionUnit %}
                                {% if room.acquisitionUnit.state != 'Opérationnel' %}

                                    <p>Aucune valeur n'a été prise pour le moment</p>
                                    <p>Attendez qu'un technicien rende le SA opérationnel</p>

                                {% endif %}

                            {% endif %}
                            {% else %}

                                <div>
                                    <ul class="data">
                                        {% if temp[1] != 0 %}
                                            <li>Dernière mesure : {{ temp[1] }} </li>
                                        {% elseif humidity[1] != 0 %}
                                            <li>Dernière mesure : {{ humidity[1] }} </li>
                                        {% elseif co2[1] != 0 %}
                                            <li>Dernière mesure : {{ co2[1] }} </li>
                                        {% else %}
                                            <li>Erreur</li>
                                        {% endif %}

                                        {% if (temp[0] > 0) %}
                                            <li id="tempValue">Dernière mesure de température: {{ temp[0] }}°C</li>
                                        {% else %}
                                            <li>Une erreur est survenue.</li>
                                        {% endif %}
                                        {% if (humidity[0] > 0) %}
                                            <li id="humidityValue">Humidité actuelle de la salle: {{ humidity[0] }}%</li>
                                        {% else %}
                                            <li>Une erreur est survenue.</li>
                                        {% endif %}
                                        {% if (co2[0] > 0) %}
                                            <li id="co2Value">Taux de CO2 dans la salle: {{ co2[0] }}PPM</li>
                                        {% else %}
                                            <li>Une erreur est survenue.</li>
                                        {% endif %}
                                    </ul>
                                </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% include 'partial/footer.html.twig'%}

</body>
</html>