<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<!DOCTYPE html>
<html lang="fr" xmlns="http://www.w3.org/1999/html">
<head>
    <title>SmartCampus</title>
    <link rel="stylesheet" href="{{ asset('assets/css/detailRoom.css') }}">
    <link rel="icon" href="{{ asset('assets/img/favicon.ico') }}" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>
<body>
{% include 'partial/header.html.twig'%}

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="/assets/js/toast.js"></script>
{% for flashMessage in app.flashes('changesSaved') %}
    <script>showToast("Salle modifiée avec succès !")</script>
{% endfor %}

<section>
    <div class="form">
        <div class="title">
            <a class="backArrow" href="{{ path('app_admin') }}">
                <img src="{{ asset('assets/img/back_arrow.svg') }}" alt="Retour">
            </a>
            <p>Informations sur la salle {{ room.name }}</p>
            {% if is_granted('ROLE_ADMIN') %}
                <p>Données</p>
            {% else %}
                <p>Système d'acquisition</p>
            {% endif %}
        </div>
        <div class="formInputs">
            <div class="sectionsOfWindow">
                <div class="formAndFooter">
                    <div class="roomInfo">
                        <div class="listInfoRoom">
                            <ol>
                                <li>
                                    Étage : {{
                                    room.floor == 0 ? 'Rez-de-chaussée'
                                    : room.floor == 1 ? '1er'
                                    : room.floor ~ 'ème'
                                    }}
                                </li>
                                <li>Capacité : {{ room.capacity }} personnes</li>
                                {% if (room.hasComputers) %}
                                    <li>Ordinateur : oui</li>
                                {% else %}
                                    <li>Ordinateur : non</li>
                                {% endif %}
                                <li>Surface : {{ room.area }} mètres carrés</li>
                                <li>Exposition : {{ room.exposure }}</li>
                                <li>Nombre de fenêtres : {{ room.nbWindows }}</li>
                            </ol>
                        </div>
                    </div>

                    <div class="formFooter">

                        <div class="buttons">
                                <a href="{{ path('editRoom', {'room' : room.id}) }}" type="submit" class="endButton">Modifier la salle</a>
                            <button type="button" class="endButton delete" data-bs-toggle="modal" data-bs-target="#removeRoomModal">
                                Supprimer
                            </button>


                            <!-- Modal -->
                            <div class="modal fade" id="removeRoomModal" tabindex="-1" aria-labelledby="removeRoomModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-2" id="removeRoomModalLabel">Êtes-vous sûr ?</h1>
                                        </div>
                                        <div class="modal-body">
                                            Vous allez supprimer la salle : {{ room.name }}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="endButton cancelButtonModal" data-bs-dismiss="modal">Annuler</button>
                                            <a style="text-decoration: none"  href="{{ path('removeRoom', {'room': room.id})}}" class="endButton delete">Confirmer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <section class = "line"></section>
                <div class="rightSection">
                    <div class="formAndFooter">
                        <div class="adviceForUser">
                        {% if room.acquisitionUnit == false %}
                            <p>Aucun système d'acquisition n'a été installé dans cette salle</p>
                        {% else  %}
                        {% endif %}
                            {% if (temp[0] < 0 and humidity[0] < 0 and co2[0]) %}

                                {% if (temp[1] != 0) %}

                                    <p>Un ou plusieurs capteurs ne renvoie pas les données correctement</p>

                            {% elseif room.acquisitionUnit %}
                                {% if room.acquisitionUnit.state != 'Opérationnel' %}

                                    <p>Aucune valeur n'a été prise pour le moment</p>
                                    <p>Attendez qu'un technicien rende le SA opérationnel</p>

                                {% endif %}

                            {% endif %}
                            {% else %}

                                <div>
                                    <ul class="data">
                                        <li class="lastData">
                                            <div class="lastDataDate">
                                                Dernière mesure
                                            </div>
                                        {% if temp[1] != 0 %}
                                            <div class="lastDataValue">
                                                {{ temp[1] }}
                                            </div>
                                        {% elseif humidity[1] != 0 %}
                                            <div class="lastDataValue">
                                                {{ humidity[1] }}
                                            </div>
                                        {% elseif co2[1] != 0 %}
                                            <div class="lastDataValue">
                                                {{ co2[1] }}
                                            </div>
                                        {% else %}
                                            <div class="lastDataError">Erreur</div>
                                        {% endif %}
                                        </li>
                                        <li class="tempValue">
                                            {% if (temp[0] > 0) %}
                                                <div class="typeValue">Température</div>
                                                <div class="value">{{ temp[0] }}°C</div>
                                            {% else %}
                                                <div class="value">Une erreur est survenue.</div>
                                            {% endif %}
                                        </li>
                                        <li class="tempValue">
                                            {% if (temp[0] > 0) %}
                                                <div class="typeValue">Humidité</div>
                                                <div class="value">{{ humidity[0] }}%</div>
                                            {% else %}
                                                <div class="value">Une erreur est survenue.</div>
                                            {% endif %}
                                        </li>
                                        <li class="tempValue">
                                            {% if (temp[0] > 0) %}
                                                <div class="typeValue">CO2</div>
                                                <div class="value">{{ co2[0] }} PPM</div>
                                            {% else %}
                                                <div class="value">Une erreur est survenue.</div>
                                            {% endif %}
                                        </li>
                                    </ul>
                                </div>
                        </div>
                        {% endif %}
                        {% if room.acquisitionUnit and room.acquisitionUnit.state == 'Opérationnel' %}
                        <a class="graphButton" href="{{ path('view_graph', {'room' : room.id}) }}">
                            Voir l'historique des données
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% include 'partial/footer.html.twig'%}

</body>
</html>