<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<!DOCTYPE html>
<html lang="fr" xmlns="http://www.w3.org/1999/html">
<head>
    <title>SmartCampus</title>
    <link rel="stylesheet" href="{{ asset('assets/css/detailRoom.css') }}">
    <link rel="icon" href="{{ asset('assets/img/favicon.ico') }}" />
</head>
<body>
{% include 'partial/header.html.twig'%}


<section>
    <div class="form">
        <div class="title">
            <a class="backArrow" href="{{ path('app_admin') }}">
                <img src="{{ asset('assets/img/back_arrow.svg') }}" alt="Retour">
            </a>
            <p>Salle {{ room.name }}</p>
            <p>Système d'acquisition</p>
        </div>
        <div class="formInputs">
            <div class="sectionsOfWindow">
                <div class="formAndFooter">
                    <div class="restOfForm">
                        <p class="detailTitle">Détail de la salle {{ room.name }}</p>
                        <p>Étage : {{
                            room.floor == 0 ? 'Rez-de-chaussée'
                            : room.floor == 1 ? '1er'
                            : room.floor ~ 'ème'
                            }}</p>
                        <p>Capacité maximum : {{ room.capacity }} personne{{ room.capacity > 1 ? 's' : ''}}</p>
                        <p>Cette salle contient des ordinateurs : {{ room.hasComputers ? 'Oui' : 'Non' }}</p>
                        <p>Superficie : {{ room.area }} m²</p>
                        <p>Exposition : {{ room.exposure }}</p>
                        <p>Cette salle contient {{ room.nbWindows }} fenêtre{{ room.nbWindows > 1 ? 's' }}</p>
                    </div>


                    {% if (temp[0] == -1 and humidity[0] == -1 and co2[0] == -1) or not room.sa or room.sa.state != 'Opérationnel' %}
                        <div>
                            <p style="text-align: center">Aucune mesure n'a été faite dans cette salle</p>
                            {% if not room.sa %}
                                <p>Pour commencer à récupérer des données, veuillez affecter un S.A</p>
                            {% elseif room.sa.state != 'Operationnel' %}
                                <p>Le S.A doit être opérationnel afin de pouvoir récupérer des données</p>
                            {% endif %}
                        </div>

                    {% else %}
                        <div>
                            <ul class="data">
                                <li>Dernière mesure : {{ temp[1] }} </li>

                                <li>{{
                                        temp[0] == -1 ? "Une erreur est survenue avec le capteur de température " :
                                        "Dernière mesure de température : " ~  temp[0]  ~ "C°"
                                    }}
                                </li>
                                <li>
                                    {{   humidity[0] < 0 ? "Une erreur est survenue avec le capteur d'humidité" :
                                    "Humidité actuelle de la salle " ~ humidity[0] ~ "%"
                                    }}
                                </li>
                                <li>
                                    {{ co2[0] < 0 ? "Une erreur est survenue avec le capteur de CO2" :
                                        "Taux de CO2 dans la salle : " ~ co2[0] ~ "PPM"

                                    }}
                                </li>

                            </ul>
                        </div>
                    {% endif %}


                    <div class="formFooter">
                        <div class="buttons">
                            <a href="{{ path('editRoom', {'room' : room.id}) }}" type="submit" class="endButton">Modifier la salle</a>
                            <button type="button" class="endButton delete" data-bs-toggle="modal" data-bs-target="#removeRoomModal">
                                Supprimer
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="removeRoomModal" tabindex="-1" aria-labelledby="removeRoomModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-2" id="removeRoomModalLabel">Êtes-vous sûr ?</h1>
                                        </div>
                                        <div class="modal-body">
                                            Vous allez supprimer la salle : {{ room.name }}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="endButton cancelButtonModal" data-bs-dismiss="modal">Annuler</button>
                                            <a style="text-decoration: none"  href="{{ path('removeRoom', {'room': room.id})}}" class="endButton delete">Confirmer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <section class = "line"></section>
                <div class="sectionsOfWindow">
                    <div class="formAndFooter">
                        <div class="restOfForm">
                            {% if room.sa %}
                                <p class="detailTitle">Détail du S.A affecté</p>

                                <p>Numéro du S.A : {{ room.sa }}</p>
                                <p>Etat du S.A : {{ room.sa.state }}</p>
                            {% elseif hasSAAvailable %}
                                <p class="detailTitle">AUCUN S.A AFFECTÉ</p>
                                <p class="detailTitle">Vous pouvez affecter un S.A</p>
                            {% elseif not hasSAInDatabase %}
                                <p class="detailTitle">AUCUN S.A N'A ÉTÉ AJOUTÉ POUR LE MOMENT</p>
                                <p class="detailTitle">Commencez par ajouter un S.A</p>
                            {% else %}
                                <p class="detailTitle">AUCUN S.A N'EST ACTUELLEMENT DISPONIBLE</p>
                                <p class="detailTitle">Commencez par ajouter un S.A</p>
                            {% endif %}


                        </div>
                        <div class="formFooter">
                            <div class="buttons {{ room.sa ? '' : 'button'}}">
                                {% if room.sa %}
                                    <a href="{{ path('assignSA', {'room' : room.id }) }}" class="endButton">Gérer l'affectation</a>
                                    <button type="button" class="endButton delete" data-bs-toggle="modal" data-bs-target="#unassignSaModal">
                                        Désaffecter
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="unassignSaModal" tabindex="-1" aria-labelledby="unassignSaModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-2" id="unassignSaModalLabel">Êtes-vous sûr ?</h1>
                                                </div>
                                                <div class="modal-body">
                                                    Vous allez désaffecter le SA {{ room.sa }} de la salle {{ room.name }}
                                                </div>
                                                <div class="modal-footer">
                                                        <button type="button" class="endButton cancelButtonModal" data-bs-dismiss="modal">Annuler</button>
                                                    <a style="text-decoration: none"  href="{{ path('unAssignSA', {'room' : room.id})}}" class="endButton delete">Confirmer</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% elseif hasSAAvailable %}
                                    <a href="{{ path('assignSA', {'room' : room.id}) }}" class="endButton">Affecter un S.A</a>
                                {% else %}
                                    <a href="{{ path('addSA') }}" class="endButton">Ajouter un S.A</a>

                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
{% include 'partial/footer.html.twig'%}

</body>
</html>