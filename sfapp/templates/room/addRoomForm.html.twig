<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SmartCampus - Ajouter une salle</title>
        <link rel="stylesheet" href="{{ asset('assets/css/formStyle.css') }}">
        <link rel="icon" href="{{ asset('assets/img/favicon.ico') }}" />
    </head>
    <body>


        {% include 'partial/header.html.twig'%}

        <section>
            <div class="form">
                <div class="title">
                    <a href="{{path('app_admin')}}">
                        <img src="{{ asset('assets/img/back_arrow.svg') }}" alt="Retour">
                    </a>
                    <p>
                        Ajouter une salle
                    </p>
                </div>
                <div class="formInputs">
                    {{ form_start(addRoomForm) }}
                    <div class="restOfForm">
                        {{ form_rest(addRoomForm) }}
    
                        {% for flashMessage in app.flashes('message') %}
                            <div class="flash-message">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                        
                    <div class="formFooter">
                        <p>* Obligatoire</p>
                        <div class="buttons">
                            <button type="submit" class="endButton submit">Ajouter</button>
                        </div>
                    </div>
                    {{ form_end(addRoomForm) }}
                </div>
            </div>
            </div>
        </section>

        {% include 'partial/footer.html.twig'%}
    </body>
</html>
